<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapsql">
	<select id="searchplacelist" parameterType="String" resultType="vo">
		select * from placelist 
		<trim prefix="where">
			<if test="value!=null">
			address like '%'||#{value}||'%'
			</if>
		</trim>
	</select>
	  
   <insert id="wishadd" parameterType="fvo">
   insert into favo values (1,#{info_id},#{member_id},sysdate,#{placename})
   </insert>
   
   <select id="wishcheck" parameterType="fvo" resultType="int">
   select count(*) from favo where info_id = #{info_id} and member_id=#{member_id}
   </select>
   
   <select id="wishrem" parameterType="fvo" resultType="fvo">
   select distinct placename,info_id from favo,member2 where member2.id = #{member_id} and favo.member_id = member2.id
   </select>
   
   <delete id="deletewish" parameterType="fvo">
      delete from favo where placename = #{placename} and member_id=#{member_id}
   </delete>
   
	
</mapper>